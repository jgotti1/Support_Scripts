const fs = require('fs');
const path = require('path');

const rootDirectory = '/Users/johnmargotti/OneDrive/Documents/'; // Change this to the root directory you want to search from

function deleteFolder(directoryPath) {
  fs.rm(directoryPath, { recursive: true, force: true }, (err) => {
    if (err) {
      console.error(`Error deleting ${directoryPath}: ${err}`);
    } else {
      console.log(`${directoryPath} deleted.`);
    }
  });
}

function findAndDeleteFolders(directory) {
  fs.readdir(directory, (err, files) => {
    if (err) {
      console.error(`Error reading directory: ${directory}`);
      return;
    }

    for (const file of files) {
      const filePath = path.join(directory, file);

      if (file === 'node_modules' || file === 'ios' || file === 'android') {
        deleteFolder(filePath);
      } else if (fs.lstatSync(filePath).isDirectory()) {
        findAndDeleteFolders(filePath);
      }
    }
  });
}

findAndDeleteFolders(rootDirectory);







